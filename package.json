{
  "homepage": "https://taiwanvtuberdata.github.io/",
  "private": true,
  "name": "taiwan-vtuber-data",
  "version": "2.1.6",
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact build",
    "build:gh": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact build && cp src/404.html build/404.html",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --config prettier.config.js src/**/*.{js,jsx,ts,tsx,css,json} --write",
    "test": "jest ./src/tests"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "axios": "^0.26.1",
    "miragejs": "^0.1.47",
    "preact": "^10.16.0",
    "preact-i18n": "^2.4.0-preactx",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^4.1.2",
    "react-data-table-component": "^7.5.3",
    "react-hstore": "0.0.6",
    "styled-components": "^6.0.4"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.13",
    "@types/jest": "^29.5.3",
    "@types/preact-i18n": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.1.0",
    "eslint": "^8.45.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jest-preset-preact": "^4.1.0",
    "preact-cli": "^3.4.6",
    "prettier": "^3.0.0",
    "sirv-cli": "^2.0.2",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.ts",
      "<rootDir>/src/tests/__mocks__/setupTests.ts"
    ]
  }
}
