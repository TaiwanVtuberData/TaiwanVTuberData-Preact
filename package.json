{
  "homepage": "https://taiwanvtuberdata.github.io/",
  "private": true,
  "name": "taiwan-vtuber-data",
  "version": "2.0.11",
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "preact build",
    "build:gh": "preact build && cp src/404.html build/404.html",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --config .prettierrc src/**/*.{js,jsx,ts,tsx,css,json} --write",
    "test": "jest ./src/tests"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "axios": "^0.26.1",
    "miragejs": "^0.1.44",
    "preact": "^10.7.3",
    "preact-i18n": "^2.4.0-preactx",
    "preact-render-to-string": "^5.2.0",
    "preact-router": "^4.0.1",
    "react-data-table-component": "^7.5.2",
    "react-hstore": "0.0.6",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^27.5.1",
    "@types/preact-i18n": "^2.3.1",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.1",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.3.0",
    "jest": "^27.5.1",
    "jest-preset-preact": "^4.0.5",
    "preact-cli": "^3.3.5",
    "prettier": "^2.6.2",
    "sirv-cli": "^2.0.2",
    "typescript": "^4.7.2"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.ts",
      "<rootDir>/src/tests/__mocks__/setupTests.ts"
    ]
  }
}
